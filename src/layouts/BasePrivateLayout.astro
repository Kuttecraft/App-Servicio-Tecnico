---
import "../styles/custom.css";
import "bootstrap/dist/css/bootstrap.min.css";
import "bootstrap-icons/font/bootstrap-icons.css";

import { SignedIn, SignedOut } from '@clerk/astro/components';
import Sidebar from '../components/Sidebar.astro';
import Topbar from '../components/Topbar.astro';

/**
 * Este layout:
 * - Muestra Sidebar + Topbar + contenido si el usuario está autenticado (SignedIn)
 * - Muestra una pantalla de "Acceso restringido" si NO está autenticado (SignedOut)
 *
 * Props esperadas:
 *   perfil?: PerfilDeUsuario | null
 *     → info de permisos/rol que se pasa a <Sidebar />
 *
 *   showFilters?: boolean
 *     → si true, Topbar muestra el formulario de filtros (search/dashboard)
 *     → si false, Topbar sólo muestra el botón de usuario
 *
 * También intentamos tomar `perfil` desde Astro.locals.perfil por compatibilidad
 * con middleware que haya seteado el perfil del usuario en el request.
 */

// Definimos un tipo suave para perfil para que TS no marque "any".
// No lo hacemos súper estricto porque puede variar según backend.
type PerfilDeUsuario = {
  rol?: string;
  admin?: boolean | string | 0 | 1;
  tickets?: boolean | string | 0 | 1;
  usuarios?: boolean | string | 0 | 1;
  estadisticas?: boolean | string | 0 | 1;
  [key: string]: unknown; // fallback por si en el futuro agregás más props
};

// Extraemos perfil: primero props, si no locals, si no null.
// Tipado explícito para que VSCode/TS no marque implicit any.
const perfil: PerfilDeUsuario | null =
  ((Astro.props as { perfil?: PerfilDeUsuario | null })?.perfil) ??
  ((Astro.locals as any)?.perfil as PerfilDeUsuario | null) ??
  null;

// showFilters controla si <Topbar> dibuja el formulario de filtros de dashboard.
// Lo tipamos como boolean para que TS no infiera any desde props.
const showFilters: boolean =
  (Astro.props as { showFilters?: boolean })?.showFilters ?? false;
---

<SignedIn>
  <!-- Layout principal para usuarios autenticados -->
  <!DOCTYPE html>
  <html lang="es">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>App Servicio Técnico</title>
      <link rel="icon" href="/logo.webp" type="image/webp" />
    </head>
    <body class="bg-light text-dark">
      <div class="d-flex flex-column flex-md-row min-vh-100">
        <!-- Sidebar persistente en escritorio -->
        <aside class="d-none d-md-block">
          <Sidebar perfil={perfil} />
        </aside>

        <!-- Contenedor principal (Topbar + contenido dinámico) -->
        <div class="flex-grow-1 d-flex flex-column">
          <Topbar showFilters={showFilters} />
          <main class="p-3 flex-grow-1 overflow-auto ms-md-240">
            <slot /> <!-- Contenido de cada página -->
          </main>
        </div>
      </div>

      <!-- Sidebar offcanvas para mobile -->
      <Sidebar perfil={perfil} mobile />

      <!-- Bootstrap JS (para dropdowns, offcanvas, etc.) -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
  </html>
</SignedIn>

<SignedOut>
  <!-- Layout alternativo para usuarios NO autenticados -->
  <!DOCTYPE html>
  <html lang="es">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Acceso Restringido</title>
      <link rel="icon" href="/logo.webp" type="image/svg+xml" />
    </head>
    <body class="bg-light d-flex align-items-center justify-content-center vh-100">
      <!-- Pantalla de aviso con link a iniciar sesión -->
      <div class="text-center">
        <h2 class="h4 fw-bold">Acceso restringido</h2>
        <p class="mt-2">
          Debes <a href="/signin" class="text-primary fw-semibold">iniciar sesión</a> para continuar.
        </p>
      </div>
    </body>
  </html>
</SignedOut>
