---
import "bootstrap/dist/css/bootstrap.min.css";
import { SignedIn, SignedOut } from '@clerk/astro/components';
import Sidebar from '../components/Sidebar.astro';
import Topbar from '../components/Topbar.astro';
import "bootstrap-icons/font/bootstrap-icons.css";
import "../styles/custom.css";
---
<SignedIn>
  <!DOCTYPE html>
  <html lang="es">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>App Servicio Técnico</title>
      <link rel="icon" href="/logo.svg" type="image/svg+xml" />
    </head>

    <body class="bg-light text-dark">
      <div class="d-flex flex-column flex-md-row min-vh-100">
        <!-- Sidebar persistente en desktop -->
        <aside class="d-none d-md-block">
          <Sidebar />
        </aside>

        <!-- Contenido principal -->
        <div class="flex-grow-1 d-flex flex-column">
          <Topbar />

          <main class="p-3 flex-grow-1 overflow-auto ms-md-240">
            <slot />
          </main>
        </div>
      </div>

      <!-- Sidebar offcanvas para móvil -->
      <div
        class="offcanvas offcanvas-start"
        tabindex="-1"
        id="mobileSidebar"
        aria-labelledby="mobileSidebarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="mobileSidebarLabel">Menú</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="offcanvas"
            aria-label="Cerrar"></button>
        </div>
        <div class="offcanvas-body">
          <!-- Si Sidebar.astro tuviera una variante mobile, podrías usar: 
               <Sidebar mobile /> -->
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/equipos">Equipos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/detalle/1">Detalle ejemplo</a>
            </li>
            <!-- …otros links… -->
          </ul>
        </div>
      </div>

      <!-- JS de Bootstrap (bundle con Popper incluido) -->
      <script type="module">
        import 'bootstrap/dist/js/bootstrap.bundle.min.js';
      </script>
    </body>
  </html>
</SignedIn>

<SignedOut>
  <!DOCTYPE html>
  <html lang="es">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Acceso Restringido</title>
      <link rel="icon" href="/logo.svg" type="image/svg+xml" />
    </head>
    <body class="bg-light d-flex align-items-center justify-content-center vh-100">
      <div class="text-center">
        <h2 class="h4 fw-bold">Acceso restringido</h2>
        <p class="mt-2">
          Debes <a href="/signin" class="text-primary fw-semibold">iniciar sesión</a> para continuar.
        </p>
      </div>
    </body>
  </html>
</SignedOut>
